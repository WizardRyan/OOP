                Material = new MeshStandardMaterial()
                {
                    Color = "RosyBrown"
                }
            });
        return base.OnInitializedAsync();
    }

    private void OnObjectSelected(Object3DArgs e)
    {
        foreach (var item in scene.Children)
        {
            if (item.Uuid == e.UUID)
            {
                this.msg = $"Selected object with id = {e.UUID} and type {item.Type}";
                StateHasChanged();
                break;
            }
        }
    }
